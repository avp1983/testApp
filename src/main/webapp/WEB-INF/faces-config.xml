<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">


    <application>
        <resource-bundle>
            <base-name>com.mycompany.testapp.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>
    
    <locale-config>
        <default-locale>en</default-locale>
        <supported-locale>ru</supported-locale> 
    </locale-config>
    
    <navigation-rule>
        
        <navigation-case>
            <from-outcome>login</from-outcome> 
            <to-view-id>/login.faces</to-view-id> 
        </navigation-case>
        <navigation-case>
            <from-outcome>addMail</from-outcome> 
            <to-view-id>/user/addMail.xhtml?faces-redirect=true</to-view-id> 
        </navigation-case>
        <navigation-case>
            <from-outcome>userScroller</from-outcome> 
            <to-view-id>/user/scroller.xhtml?faces-redirect=true</to-view-id> 
        </navigation-case>
        <navigation-case>
            <from-outcome>operScroller</from-outcome> 
            <to-view-id>/oper/scroller.xhtml?faces-redirect=true</to-view-id> 
        </navigation-case>
        
    </navigation-rule>


</faces-config>
